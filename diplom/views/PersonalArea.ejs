                <% for(var i = 0; i < zagol.length; i++) { %>
                    <% if (Object.values(rows[0])[i]==null || Object.values(rows[0])[i]=="") { %>
                    <div><%= zagol[i] %>: не определено</div>
                    <% }else {%>
                        <div><%= zagol[i] %>: <%= Object.values(rows[0])[i] %></div>
                   <% }} %>
            </div>
            <div class="form-group PA-cont">
                <p class="main-inf main-info__small"> Смена логина и пароля</p>
                <% if (t!=undefined){ %>
                    <div class="form-field form-field-invalid">
                        <div class="error"> <%= t %></div>
                    </div>
                    <% } %>
                <div> Укажите старый логин и пароль:</div>
                <!-- <input class="form-control item" type="text" name="username" maxlength="15" minlength="4" pattern="^[a-zA-Z0-9_.-]*$" id="username" placeholder="Логин" required> -->
